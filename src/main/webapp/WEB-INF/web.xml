<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app
PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
"http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
<filter>
  <filter-name>ScalastuffWebsite</filter-name>
  <display-name>ScalaStuff Website</display-name>
  <filter-class>scalastuff.website.ScalastuffWebsite</filter-class>
<init-param>
     <param-name>maxRequestsPerSec</param-name>
     <param-value>30</param-value>
   </init-param></filter>
  	

<filter-mapping>
  <filter-name>ScalastuffWebsite</filter-name>
  <url-pattern>/*</url-pattern>
</filter-mapping>

</web-app>
